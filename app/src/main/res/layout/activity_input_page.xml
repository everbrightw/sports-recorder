<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"

    android:id="@+id/setting_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/classic_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/matchInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dark_background_gray">

        <TextView
            android:id="@+id/match_name"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match 2 : Period 0"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/classic_white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/next_period"
            android:layout_toEndOf="@id/match_name"
            android:text="103:95"
            android:textAlignment="center"
            android:textColor="@color/classic_white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <info.hoang8f.widget.FButton
            android:id="@+id/next_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Period"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            fbutton:fButtonColor="@color/light_background_gray"
            fbutton:shadowEnabled="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="8dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:layout_centerVertical="true">
        </info.hoang8f.widget.FButton>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myTeamLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchInfo">
        <!--android:isScrollContainer="true"-->

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="My Team"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/my_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/my_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:gravity="center|end"
            android:text="@string/score_title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp" />

        <View
            android:id="@+id/myTeamDivider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/my_name"
            android:layout_alignEnd="@id/my_score"
            android:layout_alignStart="@id/my_name"
            android:background="@color/dark_background_gray" />

        <LinearLayout
            android:id="@+id/button_player_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/myTeamDivider"
            android:layout_alignStart="@id/myTeamDivider"
            android:layout_marginTop="8dp">

            <info.hoang8f.widget.FButton
                android:id="@+id/player_head"

                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                android:minWidth="@dimen/button_min_width"

                android:minHeight="@dimen/button_min_height"
                android:text="TEAM"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                fbutton:fButtonColor="@color/fbutton_color_sun_flower"
                fbutton:shadowEnabled="true" />

            <info.hoang8f.widget.FButton
                android:id="@+id/player_add"

                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:minWidth="@dimen/button_min_width"
                android:minHeight="@dimen/button_min_height"

                android:text="ADD"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                fbutton:fButtonColor="@color/light_background_gray"
                fbutton:shadowEnabled="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/miss"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="MISS"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/classic_black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="36dp"
            android:layout_alignTop="@id/swipe_btn"
            android:layout_alignBottom="@id/swipe_btn3"/>

        <TextView
            android:id="@+id/made"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="MADE"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/classic_black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="36dp"
            android:layout_alignTop="@id/swipe_btn"
            android:layout_alignBottom="@id/swipe_btn3"/>

        <com.terry.view.swipeanimationbutton.SwipeAnimationButton
            android:id="@+id/swipe_btn"
            android:layout_width="210dp"
            android:layout_height="60dp"

            android:layout_below="@id/button_player_layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <com.terry.view.swipeanimationbutton.SwipeAnimationButton
            android:id="@+id/swipe_btn2"
            android:layout_width="210dp"
            android:layout_height="60dp"

            android:layout_below="@id/swipe_btn"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <com.terry.view.swipeanimationbutton.SwipeAnimationButton
            android:id="@+id/swipe_btn3"
            android:layout_width="210dp"
            android:layout_height="60dp"

            android:layout_below="@id/swipe_btn2"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/foul_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/swipe_btn3"
            android:layout_marginTop="8dp"

            android:text="FOUL"
            android:textColor="@color/classic_white"
            android:textSize="20dp"
            fbutton:fButtonColor="@color/light_background_gray"
            fbutton:shadowEnabled="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/opponentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myTeamLayout"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/opponent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Opponent Team"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/opponent_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/opponent_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:gravity="center|end"
            android:text="@string/score_title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp" />

        <View
            android:id="@+id/opponentDivider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/opponent_name"
            android:layout_alignEnd="@id/opponent_score"
            android:layout_alignStart="@id/opponent_name"
            android:background="@color/dark_background_gray" />

        <info.hoang8f.widget.FButton
            android:id="@+id/opponent_add"

            android:layout_width="75dp"
            android:layout_height="75dp"

            android:layout_below="@id/opponentDivider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"

            android:text="ADD"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            fbutton:fButtonColor="@color/light_background_gray"
            fbutton:shadowEnabled="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opponentLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@color/fbutton_color_silver">

        <info.hoang8f.widget.FButton
            android:id="@+id/end_match"

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"

            android:text="end"
            android:textColor="#FFFFFF"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            fbutton:fButtonColor="@color/light_background_gray"
            fbutton:shadowEnabled="true"/>

        <TextView
            android:id="@+id/last_action"
            android:layout_width="200dp"
            android:layout_height="48dp"

            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/end_match"

            android:layout_weight="1"
            android:background="@color/classic_white"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Last Activity"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/undo"

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/last_action"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"

            android:foreground="@drawable/ic_undo"
            android:background="@color/classic_white" />

        <info.hoang8f.widget.FButton
            android:id="@+id/view_game_stats"

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/undo"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"

            android:text="VIEW STATS"
            android:textColor="@color/classic_white"
            fbutton:fButtonColor="@color/light_background_gray"
            fbutton:shadowEnabled="true" />
    </RelativeLayout>
</RelativeLayout>